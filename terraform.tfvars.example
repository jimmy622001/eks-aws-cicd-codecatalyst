# AWS Configuration
aws_region = "us-west-2"

# EKS Cluster Configuration
cluster_name = "my-eks-cluster"
environment  = "dev"

# Network Configuration
vpc_cidr = "10.20.0.0/19"

# CI/CD Pipeline Configuration
github_repository = "your-username/your-repo"  # e.g., "octocat/hello-world"
branch_name       = "main"

# Security Scanning (optional)
sonarqube_token = ""
snyk_token      = ""
trivy_token     = ""

# Cost Optimization
enable_cost_optimization = true

# Tags
common_tags = {
  Environment = "dev"
  Project     = "eks-cicd"
  ManagedBy   = "terraform"
}
